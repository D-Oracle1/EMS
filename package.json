{
  "name": "hylink-ems",
  "version": "1.0.0",
  "description": "Hylink Finance Limited - Enterprise Management, HR & Accounting System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@hylink/backend",
    "dev:frontend": "npm run dev --workspace=@hylink/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "db:migrate": "npm run db:migrate --workspace=@hylink/backend",
    "db:seed": "npm run db:seed --workspace=@hylink/backend",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
