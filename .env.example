# Hylink Finance EMS - Environment Variables
# Copy this file to .env and update values for your environment

# Database Configuration
DB_USER=hylink
DB_PASSWORD=your_secure_password_here
DB_NAME=hylink_ems
DATABASE_URL=postgresql://hylink:your_secure_password_here@localhost:5432/hylink_ems?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=8h

# Security
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:5173

# Server
PORT=3000
NODE_ENV=development
