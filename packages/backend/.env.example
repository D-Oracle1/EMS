# Hylink EMS Backend Environment Configuration

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hylink_ems?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Session
SESSION_TIMEOUT_MINUTES=480

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Company Details
COMPANY_NAME=Hylink Finance Limited
COMPANY_CODE=HFL
COMPANY_ADDRESS=Lagos, Nigeria
COMPANY_PHONE=+234-xxx-xxx-xxxx
COMPANY_EMAIL=info@hylinkfinance.com

# Financial Settings
BASE_CURRENCY=NGN
FINANCIAL_YEAR_START_MONTH=1
DEFAULT_INTEREST_CALCULATION=REDUCING_BALANCE

# Regulatory
REGULATORY_BODY=CBN
LICENSE_NUMBER=XXXXX
